    <!-- Splash启动页Style -->
    <style name="Theme.Venus.SplashScreen" parent="Theme.SplashScreen">
        <!--启动画面背景颜色-->
        <item name="windowSplashScreenBackground">@color/icon_background</item>
        <!-- 启动画面icon图标：这里可以是图片、帧动画等-->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/icon_background</item>
        <!-- icon动画在关闭之前显示的时长：最长时间为1000毫秒-->
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <!-- Splash退出后的主题（原先主主题）-->
        <item name="postSplashScreenTheme">@style/Theme.Venus</item>
    </style>

