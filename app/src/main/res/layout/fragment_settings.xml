<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/setting_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="设置"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.muxiao.Venus.common.CollapsibleCardView
            android:id="@+id/daily_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardTitle="米游币签到设置"
            app:initialExpanded="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setting_title_text" />

        <com.muxiao.Venus.common.CollapsibleCardView
            android:id="@+id/game_daily_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardTitle="米游社游戏签到设置"
            app:initialExpanded="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/daily_card" />

        <com.muxiao.Venus.common.CollapsibleCardView
            android:id="@+id/config_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardTitle="米游社配置信息"
            app:initialExpanded="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/game_daily_card" />

        <com.muxiao.Venus.common.CollapsibleCardView
            android:id="@+id/update_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardTitle="应用更新设置"
            app:initialExpanded="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/config_card" />

        <com.muxiao.Venus.common.CollapsibleCardView
            android:id="@+id/cache_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardTitle="缓存管理"
            app:initialExpanded="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/update_card" />

        <com.muxiao.Venus.common.CollapsibleCardView
            android:id="@+id/theme_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardTitle="主题设置"
            app:initialExpanded="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cache_card" />

        <com.muxiao.Venus.common.CollapsibleCardView
            android:id="@+id/background_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardTitle="背景设置"
            app:initialExpanded="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/theme_card" />

        <com.muxiao.Venus.common.CollapsibleCardView
            android:id="@+id/notification_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardTitle="通知设置"
            app:initialExpanded="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/background_card" />

        <com.muxiao.Venus.common.CollapsibleCardView
            android:id="@+id/about_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardTitle="关于"
            app:initialExpanded="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/notification_card" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/about_card" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/image_button"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="看米游社榜单图"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <com.muxiao.Venus.common.CollapsibleCardView
            android:id="@+id/skland_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardTitle="森空岛签到"
            app:initialExpanded="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
