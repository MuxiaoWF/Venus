<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="设置"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/daily_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_text">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="米游币签到设置"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOnSurface" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/daily_switch_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:checked="true"
                    android:text="启用功能"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="    建议只勾选所有账号均有的一个（例如大别野）"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurface" />

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:alignItems="stretch"
                    app:flexWrap="wrap">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/daily_checkbox_genshin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="原神"
                        android:textAppearance="?attr/textAppearanceBodyMedium" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/daily_checkbox_zzz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="绝区零"
                        android:textAppearance="?attr/textAppearanceBodyMedium" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/daily_checkbox_srg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="星铁"
                        android:textAppearance="?attr/textAppearanceBodyMedium" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/daily_checkbox_hr3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="崩三"
                        android:textAppearance="?attr/textAppearanceBodyMedium" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/daily_checkbox_hr2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="崩二"
                        android:textAppearance="?attr/textAppearanceBodyMedium" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/daily_checkbox_weiding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="未定"
                        android:textAppearance="?attr/textAppearanceBodyMedium" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/daily_checkbox_dabieye"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:padding="8dp"
                        android:text="大别野"
                        android:textAppearance="?attr/textAppearanceBodyMedium" />

                </com.google.android.flexbox.FlexboxLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/game_daily_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/daily_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="米游社游戏签到设置"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOnSurface" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/game_daily_switch_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:checked="true"
                    android:text="启用功能"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:alignItems="stretch"
                    app:flexWrap="wrap">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/game_daily_checkbox_genshin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="原神"
                        android:textAppearance="?attr/textAppearanceBodyMedium" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/game_daily_checkbox_zzz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="绝区零"
                        android:textAppearance="?attr/textAppearanceBodyMedium" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/game_daily_checkbox_srg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="星铁"
                        android:textAppearance="?attr/textAppearanceBodyMedium" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/game_daily_checkbox_hr3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="崩三"
                        android:textAppearance="?attr/textAppearanceBodyMedium" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/game_daily_checkbox_hr2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="崩二"
                        android:textAppearance="?attr/textAppearanceBodyMedium" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/game_daily_checkbox_weiding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="未定"
                        android:textAppearance="?attr/textAppearanceBodyMedium" />

                </com.google.android.flexbox.FlexboxLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/icon_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/game_daily_card"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOnSurface" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/github_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableEnd="@drawable/link_url"
                    android:drawablePadding="6dp"
                    android:text="Github开源地址"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/blog_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableEnd="@drawable/link_url"
                    android:drawablePadding="6dp"
                    android:text="俺的Blog(啥都没有)"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant" />


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
